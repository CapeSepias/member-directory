{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Donations{% endblock %}

{% block body %}

<div class="row mb-3">
  <div class="col-lg-6">
    <div class="h4">Donations</div>
  </div>
  <div class="col-lg-6 text-right">
    <a href="{{ path('donorbox_import') }}" class="btn btn-sm btn-primary"><i class="fas fa-upload fa-fw"></i> Import from Donorbox</a>
    <a href="{{ path('donation_new') }}" class="btn btn-sm btn-primary"><i class="fas fa-plus fa-fw"></i> New Donation</a>
  </div>
</div>

{% if donations %}
{% include 'donation/_donation_totals.html.twig' %} 

<div class="card mb-3 shadow">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped" id="donationsTable">
        <thead>
          <tr>
            <th>Date</th>
            <th>Donor</th>
            <th>Campaign</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Fees</th>
            <th>Net Amount</th>
            <th>Recurring?</th>
            <th class="col-edit" data-orderable="false"></th>
          </tr>
        </thead>
        <tbody>
          {% for donation in donations %}
          {% include 'donation/_donation_row.html.twig' %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% else %}
<p class="alert alert-info">No donations matched your criteria.</p>
{% endif %}

{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('donations') }}
{% endblock %}
