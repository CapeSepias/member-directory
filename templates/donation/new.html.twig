{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - New Donation{% endblock %}

{% block body %}
{% embed '_page_header.html.twig' %}
{% block page_header_title %}New Donation{% endblock %}
{% endembed %}

{{ include('donation/_form.html.twig') }}

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function () {
  if ($('#donation_member').val() === '') {
    $('#donorNameFields').show()
  }
  $('#donation_member').on('change', function (el) {
    if ($(el.target).val()) {
      $('#donorNameFields').hide()
    } else {
      $('#donorNameFields').show()
    }
  })
})
</script>
{% endblock %}
