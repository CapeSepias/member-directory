{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{donation}}{% endblock %}

{% block body %}
{% embed '_page_header.html.twig' %}
{% block page_header_title %}{{ donation }}{% endblock %}
{% endembed %}

{{ include('donation/_form.html.twig', {'button_label': 'Update'}) }}

{{ include('donation/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function () {
  if ($('#donation_member').val() === '') {
    $('#donorNameFields').show()
  }
  $('#donation_member').on('change', function (el) {
    if ($(el.target).val()) {
      $('#donorNameFields').hide()
    } else {
      $('#donorNameFields').show()
    }
  })
})
</script>
{% endblock %}
