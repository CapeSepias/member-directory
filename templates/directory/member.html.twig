{% extends 'base.html.twig' %}

{% block title %}Directory{% endblock %}

{% block body %}

<div class="container">
  {% include 'directory/partials/directory_navigation.html.twig' %}

  <h1>{{ record.preferredName }} {{ record.lastName }}</h1>

  {% if record.isDeceased %}
  <sup class="badge badge-dark" title="Deceased">Deceased</sup>
  {% endif %}
  {% if record.status.code == 'RENAISSANCE' %}
  <sup class="badge badge-secondary" title="Renaissance">Renaissance</sup>
  {% endif %}

  <div class="row">
    <div class="col-lg-8">
      <table class="table">
        <tbody>
          <tr>
            <th>Status</th>
            <td>{{ record.status.label }}</td>
          </tr>
          <tr>
            <th>Full Name</th>
            <td>
              {{ record.firstName }} {{ record.middleName }} {{ record.lastName }}
            </td>
          </tr>
          <tr>
            <th>Chapter Number</th>
            <td>{{ record.localIdentifier|replace({'337-': ''})|number_format }}</td>
          </tr>
          <tr>
            <th>Join Date</th>
            <td>{{ record.joinDate|date('F j, Y')|default('-') }}
          </tr>
          <tr>
            <th>Class Year</th>
            <td>{{ record.classYear|default('-') }}
          </tr>
          <tr>
            <th>Email</th>
            <td>
              {% for email in record.memberEmails %}
              {% if email.label %}<span class="badge badge-secondary">{{ email.label }}</span><br />{% endif %}
              <a href="mailto:{{ email.email }}">{{ email.email }}</a>
              {% endfor %}
            </td>
          </tr>
          <tr>
            <th>Phone Number</th>
            <td>
              {% for phone in record.memberPhoneNumbers %}
              {% if phone.label %}<span class="badge badge-secondary">{{ phone.label }}</span><br />{% endif %}
              {{ phone.phoneNumber }}
              {% endfor %}
            </td>
          </tr>
          <tr>
            <th>Address</th>
            <td>
              {% for address in record.memberAddresses %}
              <div>
              {% if address.label %}<span class="badge badge-secondary">{{ address.label }}</span><br />{% endif %}
              {{ address.addressLine1 }}<br />
              {% if address.addressLine2 %}{{ address.addressLine2 }}<br />{% endif %}
              {{ address.city }} {{ address.state }}, {{ address.postalCode }}<br />
              {{ address.country }}
              </div>
              {% endfor %}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-4">
      <img src="{{ record.photoUrl }}" class="img-fluid" />
    </div>
  </div>
<div>
{% endblock %}
