{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Manage Two-Factor Security{% endblock %}

{% block body %}
{% embed '_page_header.html.twig' %}
{% block page_header_title %}Manage Two-Factor Security{% endblock %}
{% endembed %}

<div class="card mb-3 shadow" style="max-width:40rem">
  <div class="card-body py-3">
    <p class="lead">
      <i class="fas fa-check fa-fw text-success"></i> Two-Factor Security is enabled on this account.
    </p>
  </div>
  <div class="card-footer text-right">
    <a href="{{ path('app_disable_two_factor') }}" class="btn btn-delete btn-danger">Deactivate Two-Factor Security</a>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
